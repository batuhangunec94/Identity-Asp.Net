@model IdentityApp.Models.RoleEditModel
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="RoleId" value="@Model.Role.Id" />

    <div class="panel panel-primary">
        <div class="panel-heading">
            Add to @Model.Role.Name
        </div>
        <table class="table table-striped">
            @if (Model.NonMembers.Count() == 0)
            {
                <tr> <td colspan="2">Eklenebilcek Kullanıcı yok</td></tr>
            }
            else
            {
                <tr>
                    <td>
                        User Id
                    </td>
                    <td>
                        Role
                    </td>
                </tr>
                foreach (var item in Model.NonMembers)
                {
                    <tr>
                        <td>
                            @item.UserName
                        </td>
                        <td>
                            <input type="checkbox" name="IdsToAdd" value="@item.Id" />

                        </td>
                    </tr>
                }
            }
        </table>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">
            Remove from @Model.Role.Name
        </div>
        <table class="table table-striped">
            @if (Model.Members.Count() == 0)
            {
                <tr> <td colspan="2">Bu role sahib kullanıcı yok</td></tr>
            }
            else
            {
                <tr>
                    <td>
                        User Id
                    </td>
                    <td>
                        Role
                    </td>
                </tr>
                foreach (var item in Model.Members)
                {
                    <tr>
                        <td>
                            @item.UserName
                        </td>
                        <td>
                            <input type="checkbox" name="IdsToDelete" value="@item.Id" />

                        </td>
                    </tr>
                }
            }
        </table>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}

